{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Storage Account"
            }
        },
        "location": {
            "defaultValue": "[resourceGroup().location]",
            "type": "string",
            "metadata": {
                "description": "Azure Location, defaults to Resource Group Location"
            }
        },
        "storageAccountSKUName": {
            "allowedValues": [
                "Premium_LRS",
                "Premium_ZRS",
                "Standard_GRS",
                "Standard_GZRS",
                "Standard_LRS",
                "Standard_RAGRS",
                "Standard_RAGZRS",
                "Standard_ZRS"
            ],
            "defaultValue": "Standard_LRS",
            "type": "string",
            "metadata": {
                "description": "SKU Name, defaults to Standard_LRS"
            }
        },
        "storageAccountAccesTier": {
            "allowedValues": [
                "Cool",
                "Hot"
            ],
            "defaultValue": "Hot",
            "type": "string",
            "metadata": {
                "description": "Access Tier, defaults to Hot"
            }
        },
        "storageAccountKind": {
            "allowedValues": [
                "BlobStorage",
                "BlockBlobStorage",
                "FileStorage",
                "Storage",
                "StorageV2"
            ],
            "defaultValue": "BlobStorage",
            "type": "string",
            "metadata": {
                "description": "Storage Account Kind, defaults to BlobStorage"
            }
        },
        "storageAccountCustomDomain": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
                "description": "Custom Domain, defaults to ''"
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "[parameters('storageAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "location": "[parameters('location')]",
            "kind": "[parameters('storageAccountKind')]",
            "sku": {
                "name": "[parameters('storageAccountSKUName')]",
                "tier": "[split(parameters('storageAccountSKUName'), '_')[0]]"
            },  
            "properties": {
                "supportsHttpsTrafficOnly": false,
                "accessTier": "[parameters('storageAccountAccesTier')]",
                "customDomain": {
                    "name": "[parameters('storageAccountCustomDomain')]"
                }
            }
        }
    ],
    "outputs": {}
}